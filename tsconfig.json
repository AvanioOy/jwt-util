{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"lib": ["ES2020", "dom"],
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "node",
		"sourceRoot": "./src",
		"types": ["node"],
		"declaration": true,
		"removeComments": false,
		"sourceMap": false,
		"inlineSources": true,
		"inlineSourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": false,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"strictBindCallApply": true,
		"noImplicitOverride":  true
	},
	"include": ["src"],
	"exclude": ["node_modules", "test"]
}
